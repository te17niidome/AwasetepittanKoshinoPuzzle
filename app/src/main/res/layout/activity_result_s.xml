<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/standardback"
    android:orientation="vertical">


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/kaeru" />

    <TextView
        android:id="@+id/textView_detail1"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_detail2"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="24sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.3">


        <Button
            android:id="@+id/button_again"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/tsuduketeasobu" />

        <Button
            android:id="@+id/button_end"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/shuuryou" />

    </LinearLayout>

    <Button
        android:id="@+id/button_tweet"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.3"
        android:background="@drawable/twitter_icon"
        android:visibility="visible" />


</LinearLayout>

